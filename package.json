{
  "name": "pixel-editor",
  "version": "0.5.0",
  "description": "A pixel editor/animator built in Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron code/electron.js --disable-gpu",
    "build": "yarn run electron-ready-win && electron-packager ./ PixelEditor --out=dist --platform=win32 --arch=x64 --overwrite --electron-version=2.0.1 --icon=icon.ico",
    "icon": "electron-icon-maker -i assets/icon.png -o assets",
    "test": "yarn run web-ready && yarn run budo",
    "budo": "budo code/main.js:index.js --dir html --live",
    "electron-ready-win": "copy code\\config\\electron\\*.js code\\config\\",
    "electron-ready": "cp -f code/config/electron/*.js code/config/",
    "web-ready": "cp -f code/config/web/*.js code/config/",
    "build-web": "yarn run web-ready && browserify code/main.js -o docs/index.js",
    "upgrade": "yarn upgrade-interactive --latest"
  },
  "repository": "https://github.com/davidfig/pixel-editor",
  "author": "David Figatner",
  "license": "MIT",
  "devDependencies": {},
  "dependencies": {
    "calc-fontsize": "^1.1.0",
    "clicked": "^2.0.0",
    "easyedit": "^1.5.0",
    "eventemitter3": "^3.1.2",
    "exists": "^1.0.1",
    "fontfaceobserver": "^2.0.9",
    "fs-extra": "^7.0.1",
    "localforage": "^1.7.2",
    "path": "^0.12.7",
    "pixi-ease": "^1.1.2",
    "pixi-viewport": "^3.23.2",
    "pixi.js": "4.8.7",
    "point-in-triangle": "^1.0.1",
    "simple-window-manager": "^1.1.0",
    "tinycolor2": "^1.4.1",
    "yy-color": "^1.1.1",
    "yy-fps": "^1.0.0",
    "yy-loop": "^0.4.1",
    "yy-menu": "^1.6.2",
    "yy-pixel": "^2.3.1",
    "yy-random": "^1.7.2",
    "yy-rendersheet": "^5.0.2",
    "yy-tooltip": "^1.2.1"
  }
}
