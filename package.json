{
  "name": "pixel-editor",
  "version": "0.8.0",
  "description": "A pixel editor/animator built in Electron",
  "main": "code/index.js",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-packager . pixel-editor --platform=win32 --arch=x64 --icon=assets/icons/win/icon.ico --overwrite",
    "make": "electron-forge make",
    "icon": "electron-icon-maker -i assets/icon.png -o assets",
    "test": "yarn web-ready && yarn budo",
    "budo": "budo code/main.js:index.js --dir html --live",
    "electron-ready-win": "copy code/config/electron/*.js code/config/",
    "electron-ready": "cp -f code/config/electron/*.js code/config/",
    "web-ready": "cp -f code/config/web/*.js code/config/",
    "build-web": "yarn web-ready && browserify code/main.js -o docs/index.js",
    "upgrade": "yarn upgrade-interactive --latest"
  },
  "repository": "https://github.com/davidfig/pixel-editor",
  "author": "David Figatner",
  "license": "MIT",
  "devDependencies": {
    "budo": "^11.6.3",
    "electron": "^13.6.6",
    "electron-packager": "^14.2.1"
  },
  "dependencies": {
    "calc-fontsize": "^1.1.0",
    "clicked": "^2.0.0",
    "easyedit": "^1.5.0",
    "eventemitter3": "^4.0.0",
    "exists": "^1.0.1",
    "fontfaceobserver": "^2.0.9",
    "fs-extra": "^8.1.0",
    "localforage": "^1.7.2",
    "pixi-ease": "^1.1.2",
    "pixi-viewport": "^4.11.1",
    "pixi.js": "5.1.2",
    "point-in-triangle": "^1.0.1",
    "simple-window-manager": "^1.1.0",
    "tinycolor2": "^1.4.1",
    "yy-color": "^1.1.1",
    "yy-fps": "^1.1.0",
    "yy-loop": "^0.4.1",
    "yy-menu": "^1.6.2",
    "yy-pixel": "^2.5.0",
    "yy-random": "^1.7.2",
    "yy-rendersheet": "^5.0.4",
    "yy-tooltip": "^1.5.0"
  }
}
