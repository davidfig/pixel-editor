{
  "name": "pixel-editor",
  "version": "0.5.0",
  "description": "A pixel editor/animator built in Electron",
  "main": "main.js",
  "scripts": {
    "start": "electron code/electron.js --disable-gpu",
    "build": "npm run electron-ready-win && electron-packager ./ PixelEditor --out=dist --platform=win32 --arch=x64 --overwrite --electron-version=1.8.3 --icon=icon.ico",
    "icon": "electron-icon-maker -i assets/icon.png -o assets",
    "test": "npm run web-ready && npm run budo",
    "budo": "./node_modules/.bin/budo code/main.js:index.js --dir html --live",
    "electron-ready-win": "copy code\\config\\electron\\*.js code\\config\\",
    "electron-ready": "cp -f code/config/electron/*.js code/config/",
    "web-ready": "cp -f code/config/web/*.js code/config/",
    "build-web": "npm run web-ready && browserify code/main.js -o docs/index.js"
  },
  "repository": "https://github.com/davidfig/pixel-editor",
  "author": "David Figatner",
  "license": "MIT",
  "devDependencies": {
    "budo": "^11.2.0"
  },
  "dependencies": {
    "calc-fontsize": "^1.1.0",
    "clicked": "^1.1.0",
    "easyedit": "^1.5.0",
    "eventemitter3": "^3.0.1",
    "exists": "^1.0.1",
    "fontfaceobserver": "^2.0.9",
    "jsonfile": "^4.0.0",
    "localforage": "^1.6.0",
    "path": "^0.12.7",
    "pixi-ease": "^0.18.0",
    "pixi-viewport": "^1.4.0",
    "pixi.js": "^4.7.0",
    "point-in-triangle": "^1.0.1",
    "simple-window-manager": "^1.1.0",
    "tinycolor2": "^1.4.1",
    "yy-color": "^1.0.7",
    "yy-fps": "^0.6.0",
    "yy-loop": "^0.4.1",
    "yy-menu": "^1.6.1",
    "yy-pixel": "^2.3.1",
    "yy-random": "^1.2.0",
    "yy-rendersheet": "^4.0.1",
    "yy-tooltip": "^1.2.0"
  }
}
